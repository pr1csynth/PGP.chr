{
	"name": "PGP.chr",
	"version": "1",
	"manifest_version": 2,

	"description": "Encrypt and decrypt PGP messages",

	"background":
	{
		"scripts": ["OpenPGP.js","main.js"]
	},

	"permissions": [
		"storage"
	],

	"content_scripts": 
	[
		{
			"matches": ["<all_urls>"],
			"js": ["content.js"]
		}
	],

	"options_page": "options.html"
}