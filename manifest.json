{
	"name": "PGP.chr",
	"version": "1",
	"manifest_version": 2,

	"description": "Encrypt and decrypt PGP messages",

	"background":
	{
		"scripts": ["OpenPGP.js","main.js"]
	},

	"permissions": [
		"contextMenus"
	],

	"content_scripts": 
	[
		{
			"matches": ["<all_urls>"],
			"js": ["content.js"]
		}
	],

	"icons": {
		"16": "icon16.png",
		"48": "icon32.png",
		"128": "icon128.png",
		"450": "icon.png"
	},

	"options_page": "options.html"
}